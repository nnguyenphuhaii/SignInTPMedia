@page
@model LoginModel

@*@{
    ViewData["Title"] = "Log in";
}*@

<h1>@ViewData["Title"]</h1>

@*login tpmedia*@
<div class="page-content">
    <div class="content-wrapper">
        <div class="content-inner">
            <div class="content d-flex justify-content-center align-items-center" style="justify-content: center;">
                <form class="login-form" id="account" method="post">
                    <div class="card mb-0">
                        <div class="card-body">
                            <div class="text-center mb-3">
                                <div class="d-inline-flex align-items-center justify-content-center mb-4 mt-2">
                                    <img src="~/assets/images/tpmedialogo.png" class="h-48px" alt="" />
                                </div>
                                <h5 class="mb-0">Login to your account</h5>
                                <span class="d-block text-muted">Enter your credentials below</span>
                            </div>

                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="mb-3">
                                <label class="form-label">Email</label>
                                <div class="form-control-feedback form-control-feedback-start">
                                    @*<label asp-for="Input.Email" class="form-label"></label>*@
                                    <input asp-for="Input.Email" type="text" class="form-control" placeholder="john@doe.com" autocomplete="username" aria-required="true">
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    <div class="form-control-feedback-icon">
                                        <i class="ph-user-circle text-muted"></i>
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Password</label>
                                <div class="form-control-feedback form-control-feedback-start">
                                    <input asp-for="Input.Password" type="password" class="form-control" placeholder="•••••••••••" autocomplete="current-password" aria-required="true">
                                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    <div class="form-control-feedback-icon">
                                        <i class="ph-lock text-muted"></i>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <div class="d-flex align-items-center mb-3">
                                    <label asp-for="Input.RememberMe" class="form-check">
                                        <input type="checkbox" name="remember" class="form-check-input" asp-for="Input.RememberMe" />
                                        <span class="form-check-label">Remember</span>
                                    </label>
                                    <a id="forgot-password" asp-page="./ForgotPassword" class="ms-auto">Forgot password?</a>
                                </div>
                            </div>
                            <div class="mb-3">
                                <button id="login-submit" type="submit" class="btn btn-primary w-100">Sign in</button>
                            </div>
                            <div class="mb-3">
                                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-light w-100">Sign up</a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@*end login tpmedia*@



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
